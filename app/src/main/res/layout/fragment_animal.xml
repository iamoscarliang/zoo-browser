<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="androidx.lifecycle.LiveData" />

        <import type="com.oscarliang.zoobrowser.model.Animal" />

        <variable
            name="animal"
            type="LiveData&lt;Animal>" />

        <variable
            name="backListener"
            type="com.oscarliang.zoobrowser.ui.common.ClickListener" />

        <variable
            name="bookmarkListener"
            type="com.oscarliang.zoobrowser.ui.common.BookmarkListener" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:collapsedTitleTextColor="@color/white"
                app:expandedTitleTextColor="@color/white"
                app:contentScrim="@color/gray_500"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="@{animal.name}">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_animal_height"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{animal.imageUrl}"
                    app:layout_collapseMode="parallax" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_animal_height"
                    android:background="@drawable/color_gradient" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:collapseIcon="@drawable/ic_back"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_back"
                    app:navigationOnClickListener="@{() -> backListener.onClick()}" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round_rect"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20"
                    android:text="@{animal.location}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tool:text="Animal location" />

                <TextView
                    android:id="@+id/text_feature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20"
                    android:lineSpacingExtra="@dimen/margin_5"
                    android:text="@{animal.feature}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_location"
                    tool:text="Animal feature more feature more feature more feature more feature" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_20"
            android:backgroundTint="@{animal.bookmark ? @color/gray_700 : @color/gray_500}"
            android:elevation="@dimen/margin_20"
            android:onClick="@{() -> bookmarkListener.onBookmark(animal)}"
            android:src="@{animal.bookmark ? @drawable/ic_bookmark : @drawable/ic_bookmark_border}"
            app:borderWidth="0dp"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="right|bottom"
            app:tint="@color/white"
            tool:backgroundTint="@color/gray_700"
            tool:src="@drawable/ic_bookmark_border" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>